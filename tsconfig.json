{
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "allowJs": true,

        "moduleResolution": "node",
        "noEmit": true,

        "strict": true,
        "skipLibCheck": true,

        "esModuleInterop": true,
        "isolatedModules": true,

        "allowSyntheticDefaultImports": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}